<style type="text/css" media="screen">
  .edition a {
    background: url('<%= "/newsrack_sprite/#{@newsrack.try(:sprite_path)}" %>');
  }
</style>

<div class="newsrack rumpled">
  <% @editions.each_slice(4) do |editions| %>
    <div class="shelf">
      <% editions.each do |edition| %>
        <div class="edition">
          <a href="<%= edition.publication.slug %>/<%= edition.slug %>/">
            <%#= image_tag edition.cover_url %>
          </a>
        </div>
      <% end -%>
      <div class="shelf-ledge"></div>
    </div>
  <% end -%>
</div>
